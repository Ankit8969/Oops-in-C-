#include <bits/stdc++.h>
using namespace std;

class Student
{
    int id;
    string s1;

public:
    void give()
    {
         id = 2;
         s1 = "Anit"
        cout << id << " " << s1 << endl;
    }
};

int main()
{
    Student s1;
    s1.give();
}
